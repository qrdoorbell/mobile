{
  "rules": {
    "doorbell-settings": {
      "$doorbellId": {
        ".read": "data.child('users').child(auth.uid).exists()",
        ".write": "data.child('users').child(auth.uid).child('role').val() === 'owner'"
      }
    },

    "doorbell-stickers": {
      "$doorbellId": {
        ".read": "root.child('doorbell-settings').child($doorbellId).child('users').child(auth.uid).exists()",
        ".write": "root.child('doorbell-settings').child($doorbellId).child('users').child(auth.uid).child('role').val() === 'owner'"
      }
    },

    "doorbell-events": {
      ".indexOn": [ "ts" ],
      "$doorbellId": {
        ".read": "root.child('users').child(auth.uid).child('doorbells').child($doorbellId).exists()",
        ".write": "auth !== null && auth.token.isServiceAccount === true"
      }
    },

    "sticker-templates": {
      ".read": true,
      ".write": false
    },

    "users": {
      "$uid": {
        ".read": "auth !== null && auth.uid === $uid",
        ".write": "auth !== null && auth.uid === $uid"
      }
    },

    "invites": {
      "$inviteId": {
        ".read": "auth !== null && data.child('owner').val() === auth.uid",
        ".write": "auth !== null && newData.child('owner').val() === auth.uid && !data.exists()"
      }
    }
  }
}