{
  "rules": {
    ".read": "null !== auth.uid",
    
    "users":{
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid || auth.uid === 'service-account'"
      }
    },
    "doorbells": {
      "$doorbellId": {
        ".read": "auth.uid !== null && root.child('doorbell-users/$doorbellId').child(auth.uid).exists()",
        ".write": "auth.uid === 'service-account' || (auth.uid !== null && (root.child('doorbell-users/$doorbellId').child(auth.uid).child('role').val() === 'owner' || !root.child('doorbell-users/$doorbellId').child(auth.uid).exists()))"
      }
    },
    "doorbell-users": {
      "$doorbellId": {
        ".write": "auth.uid !== null && (!data.exists() || data.child(auth.uid).child('role').val() === 'owner' || !root.child('doorbells/$doorbellId').exists())",

        "$uid": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === 'service-account' || (auth.uid === $uid && (!data.exists() || data.child('role').val() === 'owner' || !root.child('doorbells/$doorbellId').exists()))"
        }
      }
    },
    "doorbell-events": {
      "$doorbellId": {
        ".read": "auth.uid !== null && root.child('doorbell-users/$doorbellId').child(auth.uid).exists()",
        ".write": "auth.uid === 'service-account' || (auth.uid !== null && root.child('doorbell-users/$doorbellId').child(auth.uid).child('role').val() === 'owner')"
      }
    },

    "sticker-templates": {
      ".read": "auth.uid !== null",
      ".write": "auth.token.stickers_admin === true"
    },
      
    "invites": {
      ".write": "auth.uid !== null",
      
      "$inviteId": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid === 'service-account' || (auth.uid !== null && auth.uid === data.child('owner').val() && root.child('doorbell-users').child(data.child('doorbell').val()).child(auth.uid).child('role').val() === 'owner')"
      }
    },

    "user-fcms": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid || auth.uid === 'service-account'"
      }
    },

    "user-voip-tokens": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid || auth.uid === 'service-account'"
      }
    },
      
    "livekit-rooms": {
      "$roomId": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid === 'service-account'"
      }
    }
  }
}