{
  "rules": {
    ".read": "null !== auth.uid",
    
    "users":{
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "doorbells": {
      "$doorbellId": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid !== null && root.child('doorbell-settings/$doorbellId/users').child(auth.uid).child('role').val() === 'owner'"
      }
    },
    "doorbell-settings": {
      "$doorbellId": {
        ".read": "auth.uid !== null",
        ".write": "data.child('users').child(auth.uid).child('role').val() === 'owner'"
      }
    },
    "doorbell-events": {
      "$doorbellId": {
        ".read": "auth.uid !== null",
        ".write": "root.child('doorbell-settings/$doorbellId/users').child(auth.uid).child('role').val() === 'owner'"
      }
    },
    "doorbell-stickers": {
      "$doorbellId": {
        ".read": "root.child('doorbell-settings/$doorbellId/users').child(auth.uid).exists()",
        ".write": "root.child('doorbell-settings/$doorbellId/users').child(auth.uid).child('role').val() === 'owner'"
      }
    }
  }
}