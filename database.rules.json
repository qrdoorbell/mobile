{
  "rules": {
    ".read": "null !== auth.uid",
    
    "users":{
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "doorbells": {
      "$doorbellId": {
        ".read": "auth.uid !== null",
        ".write": "auth.uid !== null && root.child('doorbell-users/$doorbellId').child(auth.uid).child('role').val() === 'owner'"
      }
    },
    "doorbell-users": {
      "$doorbellId": {
        "$uid": {
          ".read": "auth.uid === $uid",
          ".write": "auth.uid === $uid && data.child('role').val() === 'owner'"  
        }
      }
    },
    "doorbell-events": {
      "$doorbellId": {
        ".read": "auth.uid !== null && root.child('doorbell-users/$doorbellId').child(auth.uid).exists()",
        ".write": "auth.uid !== null && root.child('doorbell-users/$doorbellId').child(auth.uid).child('role').val() === 'owner'"
      }
    },

    "sticker-templates": {
      ".read": "auth.uid !== null",
      ".write": "auth.token.stickers_admin === true"
    }
  }
}